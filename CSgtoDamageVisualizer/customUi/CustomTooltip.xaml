<UserControl x:Class="CsgoDamageVisualizerDesktop.customUi.CustomTooltip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CsgoDamageVisualizerDesktop.customUi"
             mc:Ignorable="d" Background="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" >
    <Grid>
        <Label x:Name="text" Content="{Binding TooltipText, ElementName=CustomTooltip}" HorizontalAlignment="Left" Margin="5,5,5,5" VerticalAlignment="Top" Foreground="White"/>
    </Grid>
</UserControl>
