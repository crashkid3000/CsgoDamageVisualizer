<Window x:Class="CSgtoDamageVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSgtoDamageVisualizer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel Dock="Top" VerticalAlignment="Top">
            <Menu x:Name="menu" Width="Auto" Height="20" DockPanel.Dock="Top">
                <MenuItem Header="_Help">
                    <MenuItem Header="Reload Weapons File..." Click="RefreshWeaponFileMenuItem_OnClick" Name="RefreshWeaponFileMenuItem" ToolTip="Reloads the Weapon Config File (this may take a second)."></MenuItem>
                </MenuItem>
            </Menu>
        </DockPanel>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="235,180,0,0" TextWrapping="Wrap" Text="Diese Box hat ein Tooltip" VerticalAlignment="Top" MouseEnter="textBox_MouseEnter" ToolTip="Das ist der Tooltip. Tada!"/>

        <ComboBox Height="20" Width="130" Name="WeaponSelectionComboBox">
        </ComboBox>



    </Grid>
</Window>
